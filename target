# example:
# target 2 T Java 'perform jvm tomorrow'
name=#"$1"_"$2"_OPEN_"$3"_"$4"
mkdir "$name"
cd "$name"
touch notes.note
echo -- $name> notes.note
echo TARGET>> notes.note
echo -- target>> notes.note
echo TODO>> notes.note
echo '  complete target                 TODO' >> notes.note
echo SUMMARY>> notes.note
echo '  -- This task summary'>> notes.note
echo done
