# example:
# goal 2 'Buy a new house'
name=#"$1"_"$2"
file=notes.note
mkdir "$name"
cd "$name"
touch $file
echo -- $(date)>> $file
echo GOAL>> $file
echo "    $2" >> $file
echo >> $file
echo "    START_DATE" >>$file
echo "    DONE_ON">>$file
echo "TODO" >> $file
echo "    complete target                 TODO" >> $file
echo >> $file
echo "SUMMARY" >> $file
echo >> $file
vim $file
