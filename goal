# example:
# goal 2 Java 'perform jvm tomorrow'
name=#"$1"_"$2"_"$3"
id=$(date +%s%N)
file=notes.note
mkdir "$name"
cd "$name"
touch $file
echo -- id $id >> $file
echo -- $(date)>> $file
echo GOAL>> $file
echo "    $3" >> $file
echo >> $file
echo "    START_DATE" >>$file
echo "    DUE_DATE" >>$file
echo "    DONE_ON">>$file
echo "TODO" >> $file
echo "    complete target                 TODO" >> $file
echo "SUMMARY" >> $file
echo "    -- This task summary" >> $file
echo >> $file
vim $file
